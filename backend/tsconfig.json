{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./dist",
    "module": "esnext",
    "moduleResolution": "bundler",
    "target": "ES2023",

    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,

    "sourceMap": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "allowImportingTsExtensions": true,
    "types": ["node", "express"]
  }
}
